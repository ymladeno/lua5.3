function room1()
  local move = io.read()
  if move == "south" then room3()
  elseif move == "east" then room2()
  else
    print("invalid room")
  end
end

function room2()
  local move = io.read()
  if move == "south" then room4()
  elseif move == "west" then room1()
  else
    print("invalid room")
  end
end

